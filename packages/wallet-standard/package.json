{
  "name": "@hermis/wallet-standard-base",
  "version": "1.0.0",
  "description": "The framework agnostic wallet standard implementation. This package is completely framework-agnostic, allowing you to integrate Solana wallets with any UI framework or vanilla JavaScript.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsup --config tsup.config.ts",
    "prepublishOnly": "pnpm run build",
    "clean": "rm -rf dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": ["wallet", "standard", "solana", "framework-agnostic"],
  "author": "Mctursh (Ayoade Adenuga)",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "@hermis/solana-headless-core": "workspace:*",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/web3.js": "^1.98.0",
    "@solana-mobile/wallet-adapter-mobile": "^2.0.0",
    "@wallet-standard/base": "^1.1.0"
  },
  "devDependencies": {
    "@hermis/solana-headless-format-config": "workspace:*",
    "@types/node": "^22.13.8",
    "tsup": "^8.0.0"
  }
}
